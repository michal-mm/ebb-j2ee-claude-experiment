<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
             http://java.sun.com/xml/ns/javaee/application_6.xsd"
             version="6">
    
    <display-name>Calculator EAR Application</display-name>
    <description>J2EE Calculator Application with EJB and Web UI</description>
    
    <module>
        <ejb>calculator-ejb.jar</ejb>
    </module>
    
    <module>
        <web>
            <web-uri>calculator-web.war</web-uri>
            <context-root>/calculator</context-root>
        </web>
    </module>
    
</application>
